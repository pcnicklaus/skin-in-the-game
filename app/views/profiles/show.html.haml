.challenges-wrapper
  .row.profile-header
    .col-md-6
      .img-circle
        = image_tag @user.avatar.url(:medium), class:'image'
    .col-md-6
      .user-name-and-follow
        %h3.profile-user-name
          = @user.user_name
        %span
          - if @user == current_user
            = link_to 'Edit Profile', edit_profile_path(@user.user_name),
                                      class: 'btn edit-button'
      %p.profile-bio
        = @user.bio
      .user-statistics
        %p
          = pluralize @user.challenges.count, 'challenge'
