.form-wrapper
  = simple_form_for @challenge, html: { class: 'form-horizontal', multipart: true } do |f|
    .form-group
      = f.input :image
    .form-group.text-center
      = f.input :title
    .form-group.text-center
      = f.input :description
    .form-group.text-center
      = f.input :criteria
    .form-group.text-center
      = f.button :submit, class: 'btn-success'
