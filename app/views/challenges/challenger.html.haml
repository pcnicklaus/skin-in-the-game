= render 'challengerlayout', challenge: @challenge, challenger_id: current_user.id
.text-center
  .form-wrapper
    = simple_form_for @challenge, html: { class: 'form-horizontal', multipart: true } do |f|
      = hidden_field :challenge, :challenger_id, :value => current_user.id
      .col-md-1
      .form-group.col-md-6
        .form-group.text-center
          = f.text_area :criteria, class: "form-control", placeholder: "What is/are your proposed acceptance criteria?"
        .form-group.text-center
          = f.button :submit, class: 'btn-success'
          = link_to "Nope", root_path, type: :reset, class: "btn btn-lg btn-danger"
